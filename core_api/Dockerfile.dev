FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client \
    libpq-dev \
    gcc \
 && rm -rf /var/lib/apt/lists/*

ENV PYTHONUNBUFFERED 1

WORKDIR /usr/src/app

# Install both runtime and dev/test dependencies so this image is useful for
# running tests and development without repeated pip installs.
COPY requirements.txt /usr/src/app/
COPY requirements-dev.txt /usr/src/app/
RUN pip install --upgrade pip
RUN pip install -r requirements.txt -r requirements-dev.txt

COPY . /usr/src/app/

EXPOSE 8000

# Default entrypoint keeps a shell so developers can run commands interactively
CMD ["/bin/bash"]
