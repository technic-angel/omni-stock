###############################################
# Local Development Environment Variables
# -----------------------------------------
# Copy this file to `.env` (do NOT commit `.env`).
# Replace placeholder values as needed for your local setup.
#
# WARNING: Never commit real secrets (DB passwords, Django secret key,
# API tokens) to the repository. `.env` is already gitignored.
###############################################

POSTGRES_DB=omni_stock_db
POSTGRES_USER=omni_user_v1
POSTGRES_PASSWORD=changeme_local
POSTGRES_HOST=db
POSTGRES_PORT=5432
# Optionally provide a single DATABASE_URL instead of individual values (useful for Supabase/Render)
DATABASE_URL=
DJANGO_SECRET_KEY=dev-insecure-key-do-not-use-in-prod
DEBUG=True

# File Storage Configuration ------------------------------------------
# USE_SUPABASE_STORAGE: Set to True to use Supabase Storage (production)
#                       Set to False to use local FileSystemStorage (development)
USE_SUPABASE_STORAGE=False

# Supabase Storage (only needed when USE_SUPABASE_STORAGE=True) ------
# Get these from: Supabase Dashboard → Settings → API
SUPABASE_STORAGE_BUCKET=omni-stock-media
SUPABASE_STORAGE_ENDPOINT=https://your-project-id.supabase.co/storage/v1/s3
SUPABASE_STORAGE_ACCESS_KEY=
SUPABASE_STORAGE_SECRET_KEY=
SUPABASE_STORAGE_CUSTOM_DOMAIN=your-project-id.supabase.co/storage/v1/object/public/omni-stock-media

# Supabase & Frontend (example placeholders) -------------------------
# These are Vite env vars used by the frontend. Do NOT commit real keys.
# Copy real values into your local `frontend/.env` (which must be gitignored).
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
