###############################################
# Local Development Environment Variables
# -----------------------------------------
# Copy this file to `.env` (do NOT commit `.env`).
# Replace placeholder values as needed for your local setup.
#
# WARNING: Never commit real secrets (DB passwords, Django secret key,
# API tokens) to the repository. `.env` is already gitignored.
###############################################

POSTGRES_DB=omni_stock_db
POSTGRES_USER=omni_user_v1
POSTGRES_PASSWORD=changeme_local
POSTGRES_HOST=db
POSTGRES_PORT=5432
DJANGO_SECRET_KEY=dev-insecure-key-do-not-use-in-prod
DEBUG=True

# File Storage Configuration ------------------------------------------
USE_SUPABASE_STORAGE=True

# Supabase Storage (S3-compatible) -----------------------------------
SUPABASE_STORAGE_BUCKET=omni-stock-media
SUPABASE_STORAGE_ENDPOINT=https://example.supabase.co/storage/v1/s3
SUPABASE_STORAGE_ACCESS_KEY=local-dev-access-key
SUPABASE_STORAGE_SECRET_KEY=local-dev-secret-key
SUPABASE_STORAGE_CUSTOM_DOMAIN=example.supabase.co/storage/v1/object/public/omni-stock-media
SUPABASE_STORAGE_REGION=us-east-1

# Supabase & Frontend (example placeholders) -------------------------
# These are Vite env vars used by the frontend. Do NOT commit real keys.
# Copy real values into your local `frontend/.env` (which must be gitignored).
VITE_SUPABASE_URL=https://example.supabase.co
VITE_SUPABASE_ANON_KEY=local-dev-anon-key

# Optional DATABASE_URL example for local testing --------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_SSL_MODE=prefer
